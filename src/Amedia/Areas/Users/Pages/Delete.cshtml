@page
@model Amedia.Areas.Users.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete user";
}

<h4>Delete</h4>
<hr />

<p>Are you sure you want to delete this?</p>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            UserName
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2">
            Assigned Role
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Role.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="User.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="Management">Back to List</a>
    </form>
</div>